@model DOTNET_PROJECT.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card custom-card align-content-center">
        <div class="card-header bg-black text-white">
            <h2>Login form</h2>
        </div>
        <div class="card-body">
            <div class="form-group">
                @Html.LabelFor(m => m.Username)
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Username)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.password)
                @Html.PasswordFor(m => m.password , new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.password)
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-danger mt-3">Login</button>
                <p style="color:red"> @Html.ActionLink("Don't have a account?", "Register")</p>
                @Html.ActionLink("Login Using Google", "RedirectToGoogle")
            </div>
        </div>
    </div>
    <style>
        .card {
            width: 450px;
            font-family: 'Malgun Gothic'
        }
    </style>
}



